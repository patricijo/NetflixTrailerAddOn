{
  "name": "Netflix Trailers",
  "version": "0.1.6",
  "description": "Adds a button for trailers to Netflix.",
  "manifest_version": 3,
  "icons": {
    "16": "./img/16.png",
    "32": "./img/32.png",
    "48": "./img/48.png",
    "128": "./img/128.png"
  },

  "content_scripts": [
    {
      "matches": [
        "https://www.netflix.com/*"
      ],
      "js": [
        "./script.js"
      ],
      "css": [
        "./style.css"
      ]
    }
  ],
  "permissions": [

  ],
  "host_permissions": [
    "https://www.netflix.com/*"
  ]
}